{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",          
    "lib": ["ES2019", "DOM"],  
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
